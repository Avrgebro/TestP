<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.jose.carpool.frmEditarPerfil">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:background="@color/transparente">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/yellowLi">

            <ImageView
                android:id="@+id/lblEditFoto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                app:srcCompat="@android:drawable/sym_def_app_icon"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtEditNombre"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:focusable="false"
                android:background="@color/gray"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="80dp"/>

            <ImageView
                android:id="@+id/btnEditNombre"
                android:layout_width="38dp"
                android:layout_height="40dp"
                android:layout_marginTop="11dp"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                app:srcCompat="@drawable/ic_edit" />

        </LinearLayout>

        <View
            android:layout_marginLeft="85dp"
            android:layout_width="300dp"
            android:layout_height="4dp"
            android:background="@color/primary_light"></View>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtEditApellido"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:focusable="false"
            android:background="@color/gray"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="80dp"/>
        <ImageView
            android:id="@+id/btnEditApellido"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:srcCompat="@drawable/ic_edit"
            android:layout_marginTop="11dp" />
    </LinearLayout>
        <View
            android:layout_marginLeft="85dp"
            android:layout_width="300dp"
            android:layout_height="4dp"
            android:background="@color/primary_light"></View>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtEditTelefono"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:ems="10"
            android:inputType="phone"
            android:focusable="false"
            android:background="@color/gray"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="80dp"/>
        <ImageView
            android:id="@+id/btnEditTelefono"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:srcCompat="@drawable/ic_edit"
            android:layout_marginTop="11dp" />
    </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/btnEditar"
                android:layout_width="68dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/okey"
                android:onClick="EditarDatos"
                android:layout_marginLeft="160dp"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
